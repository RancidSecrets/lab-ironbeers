<h1>Random Beer</h1>
<div class="random-container">
  {{#each random}}
 
  <div class="additional-info">
    <ul>Food Pairing:{{#each this.food_pairing}}
      <li>{{this}}</li>
      {{/each}}
    </ul>
    <p>Brewers Tips: {{this.brewers_tips}}</p>
  </div>
</div>
{{/each}} 
<div>
  <div>
    <img src="{{this.image_url}}">
  </div>
  <div>
    <h1>{{this.name}}</h1>
    <p>{{this.tagline}}</p>
    <p>{{this.description}}</p>
  </div>
</div> 